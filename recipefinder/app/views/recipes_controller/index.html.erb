<h1>Searching for - <%= @keyword %></h1>
<!-- <p><%= @keyword %></p> -->
<table border="1">
	<tr>
		<th>Recipe</th>
		<th>Name</th>
		<th>Social Rank</th>
	</tr>
	<% @recipes.each do |recipe| %>
		<tr>
			<td><%= link_to image_tag(recipe["image_url"], size: "100x100"), recipe["source_url"] %></td>
			<td><%= link_to sanitizeHTML(recipe["title"]), recipe["source_url"] %></td>
			<td><%= recipe["social_rank"] %></td>
		</tr>
	<% end %>
</table>
